<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:gravity="center" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#D7D7D7" >

            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <Spinner
                        android:id="@+id/time_options_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:entries="@array/time_options_array" />

                    <LinearLayout
                        android:id="@+id/timeSelector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="80dp"
                        android:layout_marginRight="80dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/h0"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@color/green"
                            android:onClick="onTimeClick"
                            android:tag="@string/h0"
                            android:text="0" />

                        <Button
                            android:id="@+id/h1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:onClick="onTimeClick"
                            android:tag="@string/h1"
                            android:text="0" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=":"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <Button
                            android:id="@+id/m0"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:onClick="onTimeClick"
                            android:tag="@string/m0"
                            android:text="0" />

                        <Button
                            android:id="@+id/m1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:onClick="onTimeClick"
                            android:tag="@string/m1"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button1"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="1" />

                        <Button
                            android:id="@+id/button2"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="2" />

                        <Button
                            android:id="@+id/button3"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button4"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="4" />

                        <Button
                            android:id="@+id/button5"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="5" />

                        <Button
                            android:id="@+id/button6"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="6" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button7"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="7" />

                        <Button
                            android:id="@+id/button8"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="8" />

                        <Button
                            android:id="@+id/button9"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="9" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/button0"
                            style="@style/KeypadButtonStyle"
                            android:onClick="onNumpadClick"
                            android:text="0" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/buttonAddTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="addTestAlarm"
                    android:text="Add test alarm (in 5 sec)" />
            </LinearLayout>

            <ScrollView 
                android:id="@+id/tab2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
	            
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:orientation="vertical" 
	                android:padding="5dip" >
					
	                <TextView 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/sound"
	                    android:textColor="#000000"
	                    android:textSize="19dp"
	                    android:shadowColor="@color/grey"
	                    android:shadowDx="1"
	                    android:shadowDy="1"
	                    android:shadowRadius="2"/>
	                
	                <CheckBox
	                    android:id="@+id/sound"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:checked="true"
	                    android:text="@string/enabled"/>
					
	                <ImageView
	                    android:contentDescription="divider"
					    xmlns:android="http://schemas.android.com/apk/res/android"
					    android:src="@color/light_grey"
					    android:layout_width="match_parent"
					    android:layout_height="1dp"
					    android:scaleType="fitXY"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingBottom="2dp"
					    android:paddingTop="2dp" />
		                
                	<Button
	                    android:id="@+id/sound_list_btn"
	                    android:layout_height="wrap_content"
		                android:layout_width="match_parent"
	                    android:text="@string/pick_songs"
	                    android:layout_marginLeft="5dp"
	                    android:background="@color/transparent"
	                    android:gravity="center_vertical"/>
                	
                	<ImageView
	                    android:contentDescription="divider"
					    xmlns:android="http://schemas.android.com/apk/res/android"
					    android:src="@color/light_grey"
					    android:layout_width="match_parent"
					    android:layout_height="1dp"
					    android:scaleType="fitXY"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingBottom="2dp"
					    android:paddingTop="2dp" />
                	
                	<TextView 
                	    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/volume"
	                    android:textColor="#000000"
	                    android:paddingTop="5dp"
	                    android:layout_marginLeft="5dp"
	                    android:textSize="17dp"/>
                	
                	<SeekBar
                	    android:id="@+id/volumeSlider"
                	    android:layout_width="match_parent"
                	    android:layout_height="wrap_content"
                	    android:max="100"
                	    android:progress="50" />
	                
	                <TextView 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/vibration"
	                    android:textColor="#000000"
	                    android:textSize="19dp"
	                    android:shadowColor="@color/grey"
	                    android:shadowDx="1"
	                    android:shadowDy="1"
	                    android:shadowRadius="2"/>

	                       
	                <CheckBox
	                    android:id="@+id/vibration"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:checked="true"
	                    android:text="@string/enabled" />
	                
	                <TextView 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/snoozeInterval"
	                    android:textColor="#000000"
	                    android:textSize="19dp"
	                    android:shadowColor="@color/grey"
	                    android:shadowDx="1"
	                    android:shadowDy="1"
	                    android:shadowRadius="2"/>
	                
	                <Spinner
	                    android:id="@+id/snooze_list_spinner"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left"/>
	                
	                <TextView 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/games"
	                    android:textColor="#000000"
	                    android:textSize="19dp"
	                    android:shadowColor="@color/grey"
	                    android:shadowDx="1"
	                    android:shadowDy="1"
	                    android:shadowRadius="2"/>
	                
	                <CheckBox
	                    android:id="@+id/games"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/enabled" />
	
	                <Spinner
	                    android:id="@+id/games_list_spinner"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="left" />
	                
	                <TextView 
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:text="@string/repeatOnDays"
	                    android:textColor="#000000"
	                    android:textSize="19dp"
	                    android:shadowColor="@color/grey"
	                    android:shadowDx="1"
	                    android:shadowDy="1"
	                    android:shadowRadius="2"/>
	                
	                <LinearLayout 
	                    android:id="@+id/repeatOnDayLayout"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:orientation="horizontal" />
	                
	            </LinearLayout>
	            
	        </ScrollView>
        </FrameLayout>
    </LinearLayout>

</TabHost>
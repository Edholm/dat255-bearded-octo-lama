<!-- 
Inspiration found from:
http://www.dibbus.com/2011/02/gradient-buttons-for-android/
 -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/light_blue" />
            <stroke
                android:width="1dp"
                android:color="@color/light_blue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
		        android:startColor="@color/blue"
		        android:centerColor="@color/medium_blue"
		        android:endColor="@color/dark_blue" 
		        android:angle="-90" />
            <stroke
                android:width="1dp"
                android:color="@color/light_blue" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>